{% extends 'base.html.twig' %}

{% block title %}Hello ModifCarteController!{% endblock %}

{% block body %}
<body>
 <div class="card-form">
        <h2>Create Yu-Gi-Oh! Card</h2>
        <form id="cardForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="type">Type:</label>
            <input type="text" id="type" name="type" required>

            <label for="attribute">Attribute:</label>
            <input type="text" id="attribute" name="attribute" required>

            <label for="def">Defense:</label>
            <input type="number" id="def" name="def" required>

            <label for="atk">Attack:</label>
            <input type="number" id="atk" name="atk" required>

            <label for="level">Level:</label>
            <input type="number" id="level" name="level" required>

            <label for="desc">Description:</label>
            <textarea id="desc" name="desc" required></textarea>

            <label for="race">Race:</label>
            <input type="text" id="race" name="race" required>

            <label for="prix">Price:</label>
            <input type="number" id="prix" name="prix" required>

            <label for="imageUrl">Image URL:</label>
            <input type="url" id="imageUrl" name="imageUrl" required>

            <button type="button" onclick="createCard()">Create Card</button>
        </form>
    </div>

</body>
{% endblock %}
