            <button class="mx-1"><a>Supprimer</a></button>
        </div>      
    {% endfor %}

    <div class="mt-3 wrapperCenter">
        <button><a href="{{ path('creationCarte')}}">Cr√©e votre carte !</a></button>
    </div>

    <div id="cartes" style="display: none;">{{ cartes | json_encode() | raw }}</div>
</div>
{% endblock %}
