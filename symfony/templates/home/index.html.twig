{% extends 'base.html.twig' %}

{% block body %}
<body>
      <!-- Carousel -->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <!-- Image 1 -->
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset("assets/images/carou1.png")}}" alt="First slide">
            </div>
            <!-- Image 2 -->
            <div class="carousel-item">
                <img class="d-block w-100" src="/assets/images/carou2.png" alt="Second slide">
            </div>
            <!-- Image 3 -->
            <div class="carousel-item">
                <img class="d-block w-100" src="/assets/images/carou3.jpg" alt="Third slide">
            </div>
            <!-- Image 4 -->
            <div class="carousel-item">
                <img class="d-block w-100" src="/assets/images/carou4.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Content below Carousel -->
    <div class="content">
        <div class="image-left">
            <!-- Image optionnelle à gauche -->
            <img src="/assets/images/yugi.png" alt="Left Image">
            <img src="/assets/images/kaiba-yami-yugi-.png" alt="Kaiba and Yami Yugi">
        </div>
        <div class="image-center">
            <!-- Image centrale à définir -->
            <a href="page-1-url">
                <img src="/assets/images/ygopro.png" alt="Center Image">
                <img src="/assets/images/gear5.png" alt="Center Image">
                <img src="/assets/images/tercet.png" alt="Center Image">
                
            </a>
        </div>
        <div class="image-right">
            <!-- Images optionnelles à droite -->
            <img src="/assets/images/supersoldier-anime.png" alt="Super Soldier Anime">
            <img src="/assets/images/cyberse__ignister.png" alt="Cyberse Ignister">
            <img src="/assets/images/magic-circle.png" alt="Magic Circle">
        </div>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
{% endblock %}
